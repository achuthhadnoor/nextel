{
    "name": "snipcode",
    "productName": "Snipcode",
    "version": "1.0.0",
    "main": "main/index.js",
    "description": "A simple snippet manager for menubar",
    "author": {
        "name": "Achuth hadnoor",
        "email": "achuth.hadnoor123@gmail.com",
        "url": "https://achuth.netlify.com/"
    },
    "scripts": {
        "clean": "rimraf dist renderer/.next renderer/out",
        "start": "electron .",
        "build": "next build renderer",
        "ebuild": "next build renderer && next export renderer",
        "pack-app": "npm run ebuild && electron-builder -w --dir",
        "dist": "npm run ebuild && electron-builder -w",
        "web": "next ./renderer",
        "win": "npm run build && electron-builder -w"
    },
    "build": {
        "asar": true,
        "appId": "com.snipcode.app",
        "compression": "normal",
        "productName": "Snipcode",
        "files": [
            "main",
            "renderer/out"
        ],
        "win": {
            "target": "nsis",
            "icon": "main/static/logo.ico"
        },
        "dmg": {
            "contents": [
                {
                    "x": 110,
                    "y": 150
                },
                {
                    "x": 240,
                    "y": 150,
                    "type": "link",
                    "path": "/Applications"
                }
            ]
        },
        "linux": {
            "icon": "main/static/logo.png",
            "target": [
                "snap",
                "AppImage"
            ],
            "description": "Snip",
            "category": "developer tools"
        }
    },
    "devDependencies": {
        "babel-plugin-styled-components": "^1.10.6",
        "electron": "^7.1.7",
        "electron-builder": "^21.2.0",
        "next": "latest",
        "react": "^16.12.0",
        "react-dom": "^16.12.0"
    },
    "dependencies": {
        "app-root-path": "^3.0.0",
        "auto-launch": "^5.0.5",
        "brace": "^0.11.1",
        "electron-is-dev": "^1.1.0",
        "electron-log": "^4.0.2",
        "electron-next": "^3.1.5",
        "electron-positioner": "^4.1.0",
        "firebase": "^7.6.1",
        "mousetrap": "^1.6.3",
        "nprogress": "^0.2.0",
        "prop-types": "^15.7.2",
        "react-icons-kit": "^1.3.1",
        "styled-components": "^4.4.1",
        "uid-promise": "^1.1.0"
    }
}
